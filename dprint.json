{
  "typescript": {},
  "json": {
    "indentWidth": 2,
    "useTabs": false,
    "associations": [".prettierrc", "*.geojson"]
  },
  "markdown": {},
  "toml": {},
  "dockerfile": {},
  "ruff": {},
  "includes": [
    "**/*.{ts,tsx,js,jsx,json,md,toml,Dockerfile,dockerfile,geojson}",
    "./**/{dockerfile,Dockerfile}"
  ],
  "excludes": [
    "**/*-lock.json",
    "**/.next",
    "**/.venv",
    "**/build",
    "**/coverage",
    "**/dist",
    "**/node_modules",
    "**/temp",
    "**/tmp"
  ],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.95.8.wasm",
    "https://plugins.dprint.dev/json-0.20.0.wasm",
    "https://plugins.dprint.dev/markdown-0.19.0.wasm",
    "https://plugins.dprint.dev/toml-0.7.0.wasm",
    "https://plugins.dprint.dev/dockerfile-0.3.3.wasm",
    "https://plugins.dprint.dev/ruff-0.4.1.wasm"
  ]
}
